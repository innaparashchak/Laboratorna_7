import random
n = 3
A = [[random.randrange(0, 101) for j in range(n)] for i in range(n)]
max_sum = A[0][-1]
for i in range(1, n):
    sum1 = 0
    sum2 = 0
    for j in range(n - i):
        sum1 += A[i + j][j]
        sum2 += A[j][i + j]
    if sum1 > max_sum: max_sum = sum1
    if sum2 > max_sum: max_sum = sum2
print(A)
print(max_sum)
